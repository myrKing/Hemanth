 import java.util.Scanner;
public class Three
{
    public static void main(String args[])
    {
         Scanner sc=new Scanner(System.in);
         int a1=sc.nextInt();
         int b1=sc.nextInt();  
         int a2=sc.nextInt();
         int b2=sc.nextInt();
         float x=(a1+a2)/2;
         double y=(b1+b2)/2.0;
         System.out.printf("Binoy's house is located at (%.1f,%.1f)",x,y);
    }
}
